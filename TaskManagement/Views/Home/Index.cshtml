@{
    ViewBag.Title = "Home";
}

<main>
    <section class="row m-5">
        <h1 id="title">Welcome to Task Management!</h1>
    </section>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row m-5">
        <section class="col-md-6">
            @Html.ActionLink("Assign Task", "TaskAssigning", "", new { @class = "btn btn-lg px-5 btn-primary mb-5" })
        </section>
        <section class="col-md-6" >
            @Html.ActionLink("Task View", "TaskView", "", new { @class = "btn btn-lg px-5 btn-primary" })
        </section>
    </div>
</main>